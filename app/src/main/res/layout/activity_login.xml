<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivityLogin">
    <TextView
        android:id="@+id/LoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:includeFontPadding="false"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/layoutGiris"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@id/LoginTitle">
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arkaplan_giris"
            android:fontFamily="@font/ubuntu"
            android:includeFontPadding="false"
            android:padding="@dimen/_8sdp"
            android:text="GiriÅŸ Yap"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/copyright"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/txtalrights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:includeFontPadding="false"
            android:padding="@dimen/_8sdp"
            android:text="HNOTE using Huawei Mobile Services"
            android:textColor="@color/colorQuickActionsBG"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>